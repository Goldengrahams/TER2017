{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <label class="col-sm-2" for="username">{{ 'security.login.email'|trans }}</label>
    <div class="col-sm-10">
        <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
    </div>
    <br/><br/>
    <label class="col-sm-2" for="password">{{ 'security.login.password'|trans }}</label>
    <div class="col-sm-10">
        <input type="password" class="form-control" id="password" name="_password" required="required" />
    </div>
    <br/>   
    <div class="col-sm-12">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>
    <br/>
    <div class="col-sm-12">
        <input class="btn btn-default" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
    </div>
    <br/><br/><br/>
</form>
