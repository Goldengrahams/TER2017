{% extends "FOSUserBundle::layout.html.twig" %}

{% block title %} Inscription Etudiant {% endblock %}

{% block fos_user_content %}
    {% trans_default_domain 'FOSUserBundle' %}

    {{ form_start(form, {'method': 'post', 'action': path('etudiant_registration'), 'attr': {'class': 'fos_user_registration_register'}}) }}
	    {{ form_row(form.email) }}
		{{ form_row(form.nom) }}
		{{ form_row(form.prenom) }}
		{{ form_row(form.formule) }}
		{% if form.matieres is defined %}
			{{ form_row(form.matieres) }}
		{% endif %}
		{% if form.classe is defined %}
			{{ form_row(form.classe) }}
		{% endif %}
		{% if form.singleMatiere is defined %}
			{{ form_row(form.singleMatiere) }}
		{% endif %}
		{{ form_row(form.duree) }}
		{{ form_row(form.plainPassword) }}
	{{ form_end(form) }}
{% endblock fos_user_content %}